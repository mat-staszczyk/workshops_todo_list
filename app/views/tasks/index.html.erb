<div class='main-content'>
  <div class='basic'>
    <p id='notice'><%= notice %></p>

    <h1>Tasks</h1>
    <div class='button'>
      <%= link_to 'New Task', new_task_path %>
    </div>
    <% @tasks.each do |task| %>
      <div class='list'>
        <table>
          <tbody>
            <tr>
              <td><%= task.title %></td>
              <td class="deadline">
                <%= "ends on #{task.deadline.strftime('%m/%d/%Y')}" if task.deadline %>
              </td>
            </tr>
            <tr>
              <td class='description'>
                <%= task.description %>
              </td>
              <td class='right-link'>
                <%= link_to 'Remove/Done', task, method: :delete, data: { confirm: 'Sure that you dont have to do this task?' } %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
    <br>
  </div>
</div>
